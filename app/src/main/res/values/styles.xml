<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.NavArch.ActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/color_secondary</item>
        <item name="titleTextStyle">@style/Theme.NavArch.ActionBar.TitleText</item>
    </style>


    <style name="Theme.NavArch.ActionBar.TitleText" >
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>


    <style name="ToolbarTheme">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="titleTextColor">@color/color_primary</item>
        <item name="android:background">@color/color_secondary</item>
    </style>
    <!--************************************************************************************************-->


    <!-- For Titles -->
    <style name="TitleText">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="TitleTextHigh">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="SubTitleText">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/sub_title_text_size</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="SubTitleTextSemiBold">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>
    <!--************************************************************************************************-->


    <!-- Text -->
    <style name="PrimaryText">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>
    <style name="PrimaryMediumText">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="PrimarySemiText">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>


    <style name="PrimaryTextBold">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="SecondaryTextBold">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="SecondaryText">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/color_text2</item>
    </style>
    <style name="SecondaryRegularText">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/color_text2</item>
    </style>
    <style name="SecondaryTextDark">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>
    <style name="SecondaryTextLite">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/color_text7</item>
    </style>

    <style name="SecondaryGreenText">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/color_text_green</item>
    </style>


    <style name="SecondarySemiText">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="SmallText">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/color_text2</item>
    </style>

    <style name="SmallBoldText">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/color_text2</item>
    </style>

    <style name="SmallMText">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/color_text2</item>
    </style>

    <style name="SmallSemiText">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/color_text2</item>
    </style>

    <style name="TinyItalicText">
        <item name="android:fontFamily">@font/montserrat_italic</item>
        <item name="android:textSize">@dimen/very_small_text_size</item>
        <item name="android:textColor">@color/color_text6</item>
    </style>
    <style name="TinyText">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/very_small_text_size</item>
        <item name="android:textColor">@color/color_text6</item>
    </style>

    <!--************************************************************************************************-->

    <!-- Text Input layout-->
    <style name="DefaultTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/text_color_secondary</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_text_layout_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_text_layout_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_text_layout_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_text_layout_radius</item>

    </style>

    <style name="DefaultTextEditText" parent="DefaultTextInputLayout">
        <item name="android:minHeight">@dimen/input_text_layout_height</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="SmallTextEditText" parent="DefaultTextInputLayout">
        <item name="android:padding">@dimen/dp_12</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>


    <!-- Text Input Spinner layout-->
    <style name="SpinnerTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:textColorHint">@color/text_color_secondary</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_text_layout_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_text_layout_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_text_layout_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_text_layout_radius</item>

    </style>

    <style name="SpinnerTextEditText" parent="DefaultTextInputLayout">
        <item name="android:minHeight">@dimen/dp_40</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>
    <!--************************************************************************************************-->

    <!-- Default button-->
    <!--black-->
    <style name="DefaultMaterialButton">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_default_button</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/color_on_primary</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:paddingTop">@dimen/dp_4</item>
        <item name="android:paddingBottom">@dimen/dp_4</item>
    </style>

    <style name="DefaultSmallMaterialButton">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_default_button</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/color_on_primary</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:paddingTop">@dimen/zero</item>
        <item name="android:paddingBottom">@dimen/zero</item>
        <item name="android:minHeight">@dimen/dp_40</item>
    </style>

    <!--white-->
    <style name="DefaultMaterialButtonLight">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:paddingTop">@dimen/dp_4</item>
        <item name="android:paddingBottom">@dimen/dp_4</item>

    </style>

    <!-- White material button-->
    <style name="WhiteMaterialButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:clickable">true</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="cornerRadius">@dimen/dp_0.3</item>
        <item name="strokeColor">@color/color_primary</item>
        <item name="android:paddingTop">@dimen/zero</item>
        <item name="android:paddingBottom">@dimen/zero</item>
        <item name="android:minHeight">@dimen/dp_50</item>
    </style>

    <!-- Black material button-->
    <style name="BlackMaterialButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:clickable">true</item>
        <item name="backgroundTint">@color/color_primary</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="cornerRadius">@dimen/dp_0.3</item>
        <item name="strokeColor">@color/color_primary</item>
        <item name="android:minHeight">@dimen/dp_50</item>
    </style>

    <!-- Invite material button-->
    <style name="InviteMaterialButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:clickable">true</item>
        <item name="backgroundTint">@color/teal_700</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="SmallMaterialButton">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_default_button</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/color_on_primary</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="minHeight">@dimen/dp_10</item>

    </style>

    <!-- Circular Imageview-->
    <style name="CircularImageStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style><style name="CircularImageMiniStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Tab layout -->
    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Loading dialog -->
    <style name="LoadingDialogTransparent" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <!--        <item name="android:windowLightStatusBar">true</item>-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="SeekBarColor"
        parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/white</item>
    </style>



    <style name="SmallTextMedium">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/color_text3</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
    </style>

    <style name="MediumSmallText">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/color_text3</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="SmallTextRegular">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/color_text2</item>
    </style>

    <!--style for home fragment viewpager banners-->
    <style name="roundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>



    <!--************************************************************************************************-->
    <style name="SecondaryBlueText">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/blue</item>
    </style>






    <!--************************************************************************************************-->


    <style name="TabsTextStyle">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:includeFontPadding">false</item>
    </style>


    <style name="FullscreenStyle" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--full screen dialog styel-->
    <style name="FullScreenDialogStyle">
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--wrape content dialog-->
    <style name="WrapeContentDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowFixedWidthMajor">0%</item>
        <item name="windowFixedWidthMinor">0%</item>
    </style>

    <!-- Circular Imageview-->
    <style name="RoundedRectangleShapeImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4%</item>
    </style>

</resources>